                android:text="@string/teo_7"
                android:onClick="onCheckboxClicked"/>

            <CheckBox android:id="@+id/teo8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/teo_8"
                android:onClick="onCheckboxClicked"/>

            <CheckBox android:id="@+id/pra1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pra_1"
                android:onClick="onCheckboxClicked"/>

            <CheckBox android:id="@+id/pra2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pra_2"
                android:onClick="onCheckboxClicked"/>

            <CheckBox android:id="@+id/pra3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pra_3"
                android:onClick="onCheckboxClicked"/>

            <CheckBox android:id="@+id/pra4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pra_4"
                android:onClick="onCheckboxClicked"/>

            <CheckBox android:id="@+id/pra5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pra_5"
                android:onClick="onCheckboxClicked"/>

            <CheckBox android:id="@+id/pra6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pra_6"
                android:onClick="onCheckboxClicked"/>

            <CheckBox android:id="@+id/pra7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pra_7"
                android:onClick="onCheckboxClicked"/>

            <CheckBox android:id="@+id/pra8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pra_8"
                android:onClick="onCheckboxClicked"/>
        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <!-- Toolbar -->
        <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:src="@drawable/ic_done_white_24dp"
        app:fabSize="normal"
        android:layout_margin="@dimen/padding_between"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_height="wrap_content" />

</android.support.design.widget.CoordinatorLayout>
</RelativeLayout>